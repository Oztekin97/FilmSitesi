@model FilmSitesi.Models.Konu


<h1>DÜZENLE</h1>

<h4>FİLM DÜZENLEME SAYFASI</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Konu">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="MovieId" class="control-label"></label>
                <input asp-for="MovieId" class="form-control" />
                <span asp-validation-for="MovieId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FilmKonusu" class="control-label"></label>
                @Html.TextAreaFor(m => m.FilmKonusu, new { @class = "form-control" })
                <span asp-validation-for="FilmKonusu" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Kaydet" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Film Listesine Geri Dön</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}