@model FilmSitesi.Models.MovieGenreViewModel

<h1>VİZYONDAKİLER</h1>

<p>
    <a class="btn btn-success" asp-action="Populer">Çok Tercih Edilenler</a>
</p>
<form asp-controller="Uye" asp-action="Index" method="get">
    <p>

        <select asp-for="MovieGenre" asp-items="Model.Genres">
            <option value="">Kategoriler</option>
        </select>

        Film Adı: <input type="text" asp-for="SearchString" />
        <input type="submit" value="Filter" />
    </p>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Movies[0].Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Movies[0].ReleaseDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Movies[0].Genre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Movies[0].Price)
            </th>
            <th>
                Detaylar
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Movies)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReleaseDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Genre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                <a class="btn btn-danger" asp-action="Details" asp-route-id="@item.Id">Detaylar</a>
            </td>
            <td>
                <a class="btn btn-danger" asp-action="Konu" asp-route-id="@item.Id">Film Konusu</a>
            </td>
        </tr>
        }
    </tbody>
</table>
<a class="btn btn-info" asp-action="RezervasyonAdd">Rezervasyon Oluştur</a>
<a class="btn btn-dark" asp-action="ListOrCancel">Rezervasyonları Göster/İptal Et</a>

